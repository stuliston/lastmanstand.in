<hr/>

<section class='login-options form'>
  <%= form_for(:user, url: user_session_path) do |f| %>
    <div class="row">
      <%= f.email_field :email, autofocus: true, placeholder: "Login Email" %>
    </div>

    <div class="row">
      <%= f.password_field :password, placeholder: "Password" %>
    </div>

    <div class="row">
      <%= f.check_box :remember_me, checked: true %>
      <%= f.label :remember_me %>
    </div>

    <div><%= f.submit "Sign in", class: "submit primary" %></div>
  <% end %>

</section>

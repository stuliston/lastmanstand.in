<h2>Create your free account</h2>

<section class='sign-up form'>

  <%= form_for(:user, url: user_registration_path) do |f| %>

    <%= f.fields_for :profile_attributes do |profile_f| %>
      <div class="input-prepend row">
        <span class="add-on"><i class="icon-user"></i></span>
        <%= profile_f.text_field :name, autofocus: true, placeholder: "Your Name" %>
      </div>
    <% end %>

    <div class="input-prepend row">
      <span class="add-on"><i class="icon-envelope"></i></span>
      <%= f.email_field :email, placeholder: "Login Email" %>
    </div>

    <div class="input-prepend row">
      <span class="add-on"><i class="icon-key"></i></span>
      <%= f.password_field :password, placeholder: "Password" %>
    </div>

    <div class="input-prepend row">
      <span class="add-on"><i class="icon-key"></i></span>
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
    </div>

    <div class="row">
      <%= f.check_box :remember_me, checked: true %>
      <%= f.label :remember_me %>
    </div>

    <div class="row">
      <%= f.submit "Create my account", class: "submit primary" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>

</section>
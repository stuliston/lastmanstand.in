{{#each group in byDate}}
  <h5>{{date group.date format="dddd dd MMM"}}</h5>
  <ul class="fixtures unstyled">
    {{#each fixture in group.fixtures}}
      {{#view tagName="li" classNameBindings="fixture.selectedTeamClass fixture.disableHomeTeam fixture.disableAwayTeam fixture.selectionClass fixture.resultClass"}}
        <div class="home" {{action selectWinner fixture fixture.homeTeam}}>
          {{#if isHomeSelected}}
            <i class="icon-star selected"></i>
          {{/if}}
          <span class="name" {{bindAttr title="fixture.homeTeam.name"}}>{{fixture.homeTeam.abbreviatedName}}</span>
          {{#if fixture.homeScore}}
            <span class="score">({{fixture.homeScore}})</span>
          {{/if}}
          {{predictionAvatars fixture.homeTeamPredictions}}
          {{#if isFutureRound}}
            <div {{bindAttr class=":round-pick previousHomeTeamPrediction.isCorrect:correct:incorrect"}}>
              {{#if previousHomeTeamPrediction}}
                {{#if previousHomeTeamPrediction.isCorrect}}
                  <i class="icon-ok-sign"></i>
                {{else}}
                  <i class="icon-remove-sign"></i>
                {{/if}}
                VS {{previousHomeTeamPredictionOtherTeam.abbreviatedName}}
              {{else}}
                &nbsp;
              {{/if}}
            </div>
          {{/if}}
        </div>
        <div class="time">
          {{date fixture.startTime format='HH:mm'}}
        </div>
        <div class="away" {{action selectWinner fixture fixture.awayTeam}}>
          {{#if isAwaySelected}}
            <i class="icon-star selected"></i>
          {{/if}}
          {{#if fixture.homeScore}}
            <span class="score">({{fixture.awayScore}})</span>
          {{/if}}
          <span class="name" {{bindAttr title="fixture.awayTeam.name"}}>{{fixture.awayTeam.abbreviatedName}}</span>
          {{predictionAvatars fixture.awayTeamPredictions}}
          {{#if isFutureRound}}
            <div {{bindAttr class=":round-pick previousAwayTeamPrediction.isCorrect:correct:incorrect"}}>
              {{#if previousAwayTeamPrediction}}
                {{#if previousAwayTeamPrediction.isCorrect}}
                  <i class="icon-ok-sign"></i>
                {{else}}
                  <i class="icon-remove-sign"></i>
                {{/if}}
                VS {{previousAwayTeamPredictionOtherTeam.abbreviatedName}}
              {{else}}
                &nbsp;
              {{/if}}
            </div>
          {{/if}}
        </div>
      {{/view}}
    {{/each}}
  </ul>
{{/each}}

<ul class="fixtures unstyled">
{{#each fixture in controller}}
  {{#view tagName="li" classNameBindings="fixture.selectedTeamClass fixture.disableHomeTeam fixture.disableAwayTeam fixture.selectionClass fixture.resultClass"}}
    <a class="home" {{action selectWinner fixture fixture.homeTeam}}>
      {{fixture.homeTeam.name}}
      {{#if fixture.homeScore}}
        <div class="score">Score: {{fixture.homeScore}}</div>
      {{/if}}
    </a>
    <div class="vs">
      vs
    </div>
    <a class="away" {{action selectWinner fixture fixture.awayTeam}}>
      {{fixture.awayTeam.name}}
      {{#if fixture.homeScore}}
        <div class="score">Score: {{fixture.awayScore}}</div>
      {{/if}}
    </a>
  {{/view}}
{{/each}}
</ul>